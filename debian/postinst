#!/bin/sh
set -e
case "$1" in
    configure)
    ln -s -f /usr/share/eos-app-store/EosAppStore /usr/lib/python2.7/dist-packages/
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    rm -f /usr/lib/python2.7/dist-packages/EosAppStore
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
exit 0
